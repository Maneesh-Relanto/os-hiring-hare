# Application Settings
APP_NAME=Hiring Hare
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-min-32-characters-long-change-in-production

# API Settings
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DATABASE_URL=postgresql+asyncpg://hiring_hare_user:your_password@localhost:5432/hiring_hare_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@hiringhare.com
EMAILS_FROM_NAME=Hiring Hare

# File Storage
FILE_UPLOAD_MAX_SIZE=10485760
FILE_STORAGE_PATH=./uploads
S3_BUCKET=hiring-hare-files
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
